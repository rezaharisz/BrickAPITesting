<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/frame_layout_badge_common"
    android:layout_height="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/fragment_layout"
        android:background="#d3f3e3"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fragment_badge_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/successs" />

        <TextView
            android:id="@+id/text_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_toEndOf="@+id/fragment_badge_img"
            android:layout_toRightOf="@+id/fragment_badge_img"
            android:fontFamily="@font/inter_medium"
            android:text="TextView"
            android:textColor="@color/Black"
            android:textSize="14sp" />
    </RelativeLayout>

</FrameLayout>
